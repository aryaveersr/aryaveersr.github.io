---
import Header from "@/components/Header.astro";
import "@/styles/global.css";

interface Props {
    title?: string;
}

const { title = "AryaveerSR" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    main {
        max-width: 48rem;
        margin-inline: auto;
        padding-top: 4rem;
    }
</style>
